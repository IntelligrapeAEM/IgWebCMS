    <distributionManagement>
        <repository>
            <id>mavenRepos</id>
            <name>mav-central-repo</name>
            <url>http://repo1.maven.org/maven2</url>
        </repository>

    </distributionManagement>

    <modules>
        <module>ig-igwebcms-content</module>
        <module>ig-igwebcms-view</module>
        <module>ig-igwebcms-services</module>
        <module>ig-igwebcms-all</module>
